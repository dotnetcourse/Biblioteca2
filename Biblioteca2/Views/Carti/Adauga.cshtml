@model Biblioteca2.Models.Carte

@{
	ViewData["Title"] = "Adauga";
}

<h1>Adauga</h1>

<h4>Carte</h4>
<hr />
<div class="row justify-content-md-center">
	<div class="col-md-6">
		<form asp-action="Adauga">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="NumeleCartii" class="control-label"></label>
				<input asp-for="NumeleCartii" class="form-control" />
				<span asp-validation-for="NumeleCartii" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NumeAutor" class="control-label"></label>

				<select asp-for="NumeAutor" asp-items="@((SelectList)ViewBag.Autori)" class="form-control">
					<option value="">Alegeti Autorul</option>
				</select>

				@*<input asp-for="NumeAutor" class="form-control" />*@
				<span asp-validation-for="NumeAutor" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Editura" class="control-label"></label>
				<input asp-for="Editura" class="form-control" />
				<span asp-validation-for="Editura" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DataPublicarii" class="control-label"></label>
				<input asp-for="DataPublicarii" class="form-control" />
				<span asp-validation-for="DataPublicarii" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NumarPagini" class="control-label"></label>
				<input asp-for="NumarPagini" class="form-control" />
				<span asp-validation-for="NumarPagini" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Abstract" class="control-label"></label>
				<input asp-for="Abstract" class="form-control" />
				<span asp-validation-for="Abstract" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
	<a id="clickMeBtn" class="btn">Click Me!</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	<script>
		function buttonClick() {
			//background-color: red;
			$(".form-control").attr("style", "background-color: red");






		};

		$(function () {
			//////////////
			$("#clickMeBtn").click(buttonClick);
		})
	</script>
}
